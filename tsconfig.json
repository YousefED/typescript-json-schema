{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "watch": false,
        "typeRoots" : ["node_modules/@types"]
    },
    "include": [
        "**/*.ts",
        "node_modules/@types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "example",
        "test/programs"
    ],
    "compileOnSave": true,
    "buildOnSave": false
}
